{
  "manifest_version": 3,
  "name": "Sentry Checker",
  "version": "1.0",
  "description": "Checks if a webpage has loaded Sentry error catcher.",
  "permissions": ["scripting", "activeTab", "notifications"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon_gray.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
